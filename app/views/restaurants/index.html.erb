<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant name</th>
      <th>Sido</th>
      <th>Sigungu</th>
      <th>Doromyeong</th>
      <th>Gunmul bunho1</th>
      <th>Gunmul bunho2</th>
      <th>Phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.sido %></td>
        <td><%= restaurant.sigungu %></td>
        <td><%= restaurant.doromyeong %></td>
        <td><%= restaurant.gunmul_bunho1 %></td>
        <td><%= restaurant.gunmul_bunho2 %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

