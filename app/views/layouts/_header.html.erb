<header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
    <%= link_to "작업의 편리성을 위한 NAV BAR", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">

            <!-- 알레르기 검색 버튼 -->
            <%= link_to "알레르기 검색", menus_search_path, class: "nav-item nav-link active" %>

            <!-- 식당 검색 버튼 -->
            <%= link_to '식당으로 검색', restaurants_search_path, class: "nav-item nav-link active" %>

            <!-- Public Market 버튼 -->
            <% if user_signed_in? %> 
                    <%= link_to "Public Market 가기", articles_path, class: "nav-item nav-link active" %>
            <% end %>

            <!-- 나만의 페이지 버튼 -->
            <% if user_signed_in? %> 
                <% if current_user.profile.nil? %>
                    <%= link_to "나만의 페이지", new_profile_path(@profile), class: "nav-item nav-link active" %>
                <% elsif !current_user.profile.nil? %>
                    <%= link_to "나만의 페이지", profile_path(current_user.profile.id), class: "nav-item nav-link active" %>
                <% end %>
            <% end %>

            <!-- 로그인 버튼 -->
            <% if !user_signed_in? && !owner_signed_in? %> 
                <%= link_to "로그인", new_user_session_path, class: "nav-item nav-link active" %>
            <% elsif user_signed_in?%>
                <%= link_to "로그아웃", destroy_user_session_path, method: :delete, class: "nav-item nav-link active" %>
            <% elsif owner_signed_in?%>
                <%= link_to "로그아웃", destroy_owneer_session_path, method: :delete, class: "nav-item nav-link active" %>            
            <% end %>

        <!-- 알림창 -->
        <% if user_signed_in? %>
            <a onclick="showHide('info_html')" onfocus="this.blur()" style="color:white;margin-top:7px;"><b> 알림 (<%= current_user.new_alarms.unread_by(current_user).count %>)</b></a>
             <div id="info_html" style="display:none; margin-top: 10px;">
                <%= render partial: "new_alarms/new_alarm", collection: current_user.new_alarms.unread_by(current_user) %>
                <%= link_to '<b>X</b>'.html_safe, new_alarms_read_all_path %>
            </div>
        <% end %>
       </div>
    </div>
    </nav>
</header>