<%= form_tag(menus_path, method: :get) do %>
    시/도 입력(ex. 서울특별시): 
    <select name="sido">
        <option value="서울특별시">서울특별시</option>
        <option value="부산광역시">부산광역시</option>
        <option value="대구광역시">대구광역시</option> 
        <option value="인천광역시">인천광역시</option>     
        <option value="광주광역시">광주광역시</option>
        <option value="대전광역시">대전광역시</option>
        <option value="세종특별자치시">세종특별자치시</option> 
        <option value="경기도">경기도</option>
        <option value="강원도">강원도</option>
        <option value="충청북도">충청북도</option>
        <option value="충청남도">충청남도</option> 
        <option value="전라북도">전라북도</option>
        <option value="전라남도">전라남도</option>
        <option value="경상북도">경상북도</option>
        <option value="경상남도">경상남도</option> 
        <option value="제주특별자치시">제주특별자치시</option>
    </select>
    <br><br>
    시/군/구 입력(ex. 용산구):
    <button type="button" class="jikjup">직접 입력</button>
    <button type="button" class="all">전체 선택</button>
    
    <%# 직접 입력할 경우 아래와 같은 field 뜨게%>
    <%= text_field_tag :sigungu, params[:sigungu], :class => "sigungu-enter m-3",:id => "location", :placeholder => "시군구 직접 입력"%>
    
    <br>
     <div class="d-flex justify-content-between original-check">
        <div>
            <div class="a-type"><button type="button" class="btn btn-outline-secondary">유제품 및 난류 <i class="fas fa-caret-down"></i></button></div>
            <div class="allergy-check">
                <%= check_box_tag :a9_nanryu, true, current_user.allergy.include?('난류')%> 난류<br>
                <%= check_box_tag :a10_milk, true, current_user.allergy.include?('우유')%> 우유<br>
            </div>
        </div>
        <div>
            <div class="a-type"><button type="button" class="btn btn-outline-secondary">과채류 및 곡류  <i class="fas fa-caret-down"></i></button></div>
            <div class="allergy-check">
                <%= check_box_tag :a6_peach, true, current_user.allergy.include?('복숭아')%> 복숭아<br>
                <%= check_box_tag :a7_tomato, true, current_user.allergy.include?('토마토')%> 토마토<br>
                <%= check_box_tag :a1_maemil, true, current_user.allergy.include?('메밀')%> 메밀<br>
                <%= check_box_tag :a2_mil, true, current_user.allergy.include?('밀')%> 밀<br>
                <%= check_box_tag :a3_daedu, true, current_user.allergy.include?('대두(콩)')%> 대두(콩)<br>
            </div>
        </div>
        <div>
            <div class="a-type"><button type="button" class="btn btn-outline-secondary">육류  <i class="fas fa-caret-down"></i></button></div>
            <div class="allergy-check">
                <%= check_box_tag :a11_ddakgogi, true, current_user.allergy.include?('닭고기')%> 닭고기<br>
                <%= check_box_tag :a12_shoigogi, true, current_user.allergy.include?('쇠고기')%> 쇠고기<br>
                <%= check_box_tag :a8_piggogi, true, current_user.allergy.include?('돼지고기')%> 돼지고기<br>
            </div>
        </div>
        <div>
            <div class="a-type"><button type="button" class="btn btn-outline-secondary">어패류  <i class="fas fa-caret-down"></i></button></div>
            <div class="allergy-check">
                <%= check_box_tag :a13_saewoo, true, current_user.allergy.include?('새우')%> 새우<br>
                <%= check_box_tag :a14_godeungeoh, true, current_user.allergy.include?('고등어')%> 고등어<br>
                <%= check_box_tag :a15_honghap, true, current_user.allergy.include?('홍합')%> 홍합<br>
                <%= check_box_tag :a16_junbok, true, current_user.allergy.include?('전복')%> 전복<br>
                <%= check_box_tag :a17_gul, true, current_user.allergy.include?('굴')%> 굴<br>
                <%= check_box_tag :a18_jogaeryu, true, current_user.allergy.include?('조개류')%> 조개류<br>
                <%= check_box_tag :a19_gye, true, current_user.allergy.include?('게')%> 게<br>
                <%= check_box_tag :a20_ohjingeoh, true, current_user.allergy.include?('오징어')%> 오징어<br>
            </div>
        </div>
        <div>
            <div class="a-type"><button type="button" class="btn btn-outline-secondary">과류, 아황산 및 기타  <i class="fas fa-caret-down"></i></button></div>
            <div class="allergy-check">
                <%= check_box_tag :a4_hodu, true, current_user.allergy.include?('호두') %> 호두<br>
                <%= check_box_tag :a5_ddangkong, true, current_user.allergy.include?('땅콩')%> 땅콩<br>
                <%= check_box_tag :a21_ahwangsan, true, current_user.allergy.include?('아황산류')%> 아황산류<br>
            </div>
        </div>
        <%= submit_tag 'Search'%>
    </div>
<%end%>