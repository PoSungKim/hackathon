<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>/</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>  <%# 공지사항맨위에%>
    <% @boards.each do |board| %>
    <% if board.notice == true %> 
      <tr>
        <td>공지</td>
        <td><%= board.title %></td>
        <td><%= board.content %></td>
        <td><%#= board.user.name %>관리자</td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
   <% end %> 
      </tbody>
      
 <tbody>
    <% @boards.each do |board| %>
    <% if board.notice == false %> 
     <tr>
        <td> </td>
        <td><%= board.title %></td>
        <td><%= board.content %></td>
        <td><%= board.user.name %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> 
  <% end %>
   <% end %> 
  </tbody>
</table>

